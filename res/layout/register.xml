<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/account_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/welcomeR"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/register_first_name_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/account_name"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="@string/firstName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_last_name_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_first_name_field"
        android:layout_below="@+id/register_first_name_field"
        android:ems="10"
        android:hint="@string/lastName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_password_confirmation_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_password_field"
        android:layout_below="@+id/register_password_field"
        android:ems="10"
        android:hint="@string/reEnter"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_password_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_username_field"
        android:layout_below="@+id/register_username_field"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_confirmation_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/register" 
        android:onClick="attemptRegistration"/>

    <EditText
        android:id="@+id/register_email_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_last_name_field"
        android:layout_below="@+id/register_last_name_field"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/register_username_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_email_field"
        android:layout_below="@+id/register_email_field"
        android:ems="10"
        android:hint="@string/userName"
        android:inputType="textPersonName" >
        
        <requestFocus />
        </EditText>

</RelativeLayout>