<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateAccountSuccessActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/my_account"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/create_account_success_email_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_account_success_first_name_field"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:ems="10" />

    <EditText
        android:id="@+id/create_account_success_lastname_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_account_success_email_field"
        android:layout_alignLeft="@+id/create_account_success_email_field"
        android:layout_marginBottom="78dp"
        android:ems="10" />

    <EditText
        android:id="@+id/create_account_success_first_name_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="56dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_account_success_first_name_field"
        android:layout_centerHorizontal="true"
        android:text="@string/firstName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/lastName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/create_account_success_email_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
