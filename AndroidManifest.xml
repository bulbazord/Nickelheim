<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nickelheim"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="17" />
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name="com.nickelheim.activities.WelcomeActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.nickelheim.activities.LoginActivity"
            android:label="@string/login_activity"
            android:parentActivityName="com.nickelheim.activities.WelcomeActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nickelheim.activities.WelcomeActivity"
            />
        </activity>
    </application>
</manifest>
